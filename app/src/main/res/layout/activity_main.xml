<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/base_pic"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="古美儿童"
        android:textSize="@dimen/hospital_children_playground_name_size"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/second_base_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:paddingLeft="@dimen/title_padding_left"
                android:paddingRight="@dimen/title_padding_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include
                    layout="@layout/room_name">
                </include>
                <TextView
                    android:id="@+id/date_tv"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/date_text_width"
                    android:layout_height="wrap_content"
                    android:background="@drawable/date_bg"
                    tools:text="2019年3月12日星期二 10：10"
                    android:textColor="@android:color/holo_green_dark"
                    android:gravity="center"/>
            </RelativeLayout>
            <LinearLayout
                android:paddingLeft="@dimen/content_left_padding"
                android:paddingRight="@dimen/content_right_padding"
                android:paddingTop="@dimen/content_top_padding"
                android:paddingBottom="@dimen/content_bottom_padding"
                android:layout_width="@dimen/content_width"
                android:layout_height="@dimen/content_height"
                android:orientation="horizontal">
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    layout="@layout/evaluation_room">
                </include>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    layout="@layout/listening_room">
                </include>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    layout="@layout/intelligent_room">
                </include>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="@dimen/baby_width"
            android:layout_height="@dimen/baby_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/baby_left"/>
        <ImageView
            android:layout_width="@dimen/baby_width"
            android:layout_height="@dimen/baby_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/baby_right"/>
    </RelativeLayout>
</LinearLayout>