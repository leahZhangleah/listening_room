<?xml version="1.0" encoding="utf-8"?>
<merge>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/each_room_content_width"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/intelligent_room_label"
        android:textStyle="bold"
        android:textColor="@color/name_color"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="测量室119室"
        android:background="@drawable/red_label"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/intelligent_room_waiting_list"
        android:layout_marginTop="@dimen/content_calling_number_margin_top"
        android:textColor="@color/calling_number_color"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/red_waiting"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/red_passed">
        <TextView
            android:textColor="@color/passed_number_label_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingTop="@dimen/passed_number_label_top_padding"
            android:paddingLeft="@dimen/passed_number_label_left_padding"
            android:text="过号"/>
        <ListView
            android:transcriptMode="alwaysScroll"
            android:stackFromBottom="true"
            android:layout_marginTop="@dimen/passed_list_top_margin"
            android:id="@+id/intelligent_room_passed_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/passed_number_color"
            android:text="1号 XXX 过号" />
    </RelativeLayout>
</LinearLayout>
</merge>